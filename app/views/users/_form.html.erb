<h1><%= flash[:success] %></h1>
<%= form_for @user do |f|%>
<div class="container">
  <dl>
  <div class="form-group">
    <dt><%= f.label :name, 'Name'%></dt>
    <dd><%= f.text_field :name, class: 'form-control' %></dd>
  </div>

  <div class="form-group">
    <dt><%= f.label :email, 'Email'%></dt>
    <dd><%= f.text_field :email, class: 'form-control' %></dd>
  </div>

  <div class="form-group">
    <dt><%= f.label :phone, 'Phone'%></dt>
    <dd><%= f.text_field :phone, class: 'form-control' %></dd>
  </div>

  <div class="form-group">
    <dt><%= f.label :cpf, 'CPF'%></dt>
    <dd><%= f.text_field :cpf, class: 'form-control' %></dd>
  </div>

    <%= f.submit class: 'btn btn-primary' %>
  </dl>
  <% end %>
</div>
