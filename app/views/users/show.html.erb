<div class="container">
  <div class="row">
    <h1><%= @user.name %></h1>
    <div class="col-md-8">
      <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd><%= @user.email %></dd>

        <dt>Phone</dt>
        <dd><%= @user.phone %></dd>

        <dt>CPF</dt>
        <dd><%= @user.cpf %></dd>

        <dt>Status</dt>
        <dd><%= @user.status %></dd>

        <%= link_to "Home", users_path %>
        <%= link_to "Delete", user_path(@user), :method => :delete %>
        <%= link_to "Edit", edit_user_path(@user) %>
      </dl>
    </div>
  </div>
</div>

